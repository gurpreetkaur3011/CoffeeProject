<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageNewsItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/ic_news_photo"
            android:backgroundTint="@color/brown"
            android:fontFamily="@font/redressed"
            android:textColorHint="@color/brown"
            app:boxStrokeColor="@color/brown"
            />

        <TextView
            android:id="@+id/textNewsItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/name_news"
            android:textColor="@color/blackForText"
            android:textSize="18sp"
            android:backgroundTint="@color/brown"
            android:fontFamily="@font/redressed"
            android:textColorHint="@color/brown"
            app:boxStrokeColor="@color/brown"
            />

        <TextView
            android:id="@+id/dateNewsItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/date_news"
            android:textColor="@color/blackForText"
            android:textSize="16sp"
            android:backgroundTint="@color/brown"
            android:fontFamily="@font/redressed"
            android:textColorHint="@color/brown"
            app:boxStrokeColor="@color/brown"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>
